<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <ul>
        <li><%= link_to('Google Mexico', 'www.google.com.mx') %></li>
        <li><%= link_to('Yahoo Finance', 'www.finance.yahoo.com') %></li>
        <li><%= link_to('Facebook', 'www.facebook.com') %></li>
      </ul>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>